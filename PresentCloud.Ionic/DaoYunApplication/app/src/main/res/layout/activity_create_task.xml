<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ScrollView
            android:id="@+id/scrollView2"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/RL2">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:layout_alignParentLeft="true"
                        android:text="返回" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:layout_centerInParent="true"
                        android:text="创建任务"
                        />
                    <TextView
                        android:id="@+id/create_confirm"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:text="创建"
                        android:layout_alignParentRight="true"/>
                </RelativeLayout>
                <ImageView
                    android:id="@+id/ImageView_create"
                    android:layout_below="@+id/RL2"
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:background="#E8E8E8"
                    />
                <LinearLayout
                    android:id="@+id/LL_title"
                    android:layout_below="@+id/ImageView_create"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="4"
                        android:layout_height="match_parent"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:text="标题"/>
                    <LinearLayout
                        android:gravity="right"
                        android:layout_width="0dp"
                        android:layout_weight="7"
                        android:layout_height="match_parent">
                        <EditText
                            android:id="@+id/edit_title"
                            android:enabled="true"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="text"
                            />
                    </LinearLayout>
                </LinearLayout>
                <ImageView
                    android:id="@+id/ImageView_title"
                    android:layout_below="@+id/LL_title"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E8E8E8"
                    />
                <LinearLayout
                    android:id="@+id/LL_detail"
                    android:layout_below="@+id/ImageView_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="4"
                        android:layout_height="match_parent"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:text="任务详情"/>
                    <LinearLayout
                        android:gravity="right"
                        android:layout_width="0dp"
                        android:layout_weight="7"
                        android:layout_height="match_parent">
                        <EditText
                            android:id="@+id/edit_detail"
                            android:enabled="true"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="text"
                            />
                    </LinearLayout>
                </LinearLayout>
                <ImageView
                    android:id="@+id/ImageView_detail"
                    android:layout_below="@+id/LL_detail"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E8E8E8"
                    />
                <LinearLayout
                    android:id="@+id/LL_deadline"
                    android:layout_below="@+id/ImageView_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="4"
                        android:layout_height="match_parent"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:text="设置最晚提交时间"/>
                </LinearLayout>
            </RelativeLayout>
        </ScrollView>
    </RelativeLayout>