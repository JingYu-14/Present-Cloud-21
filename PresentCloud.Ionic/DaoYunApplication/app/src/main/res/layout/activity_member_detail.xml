<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ScrollView
            android:id="@+id/scrollView2"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/RL2">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:layout_alignParentLeft="true"
                        android:text="返回" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:layout_centerInParent="true"
                        android:text="用户信息"
                        />
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_below="@+id/RL2"
                    android:id="@+id/LL11"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/LL5"
                    android:layout_below="@+id/RL2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:layout_height="match_parent"
                        android:src="@drawable/avatar"/>
                    <TextView
                        android:id="@+id/student"
                        android:layout_width="0dp"
                        android:layout_weight="7"
                        android:textSize="20dp"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="#367EAA"
                        android:gravity="center_vertical"
                        android:layout_height="match_parent"
                        android:text="Test"/>
                </LinearLayout>

                <ImageView
                    android:id="@+id/ImageView_school"
                    android:layout_below="@+id/LL5"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="#E8E8E8"
                    />
                <LinearLayout
                    android:id="@+id/LL_school"
                    android:layout_below="@+id/ImageView_school"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="#367EAA"
                        android:text="学校"/>
                    <LinearLayout
                        android:gravity="right"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:id="@+id/text_school"
                            android:layout_width="wrap_content"
                            android:textSize="20dp"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="#367EAA"
                            android:layout_height="match_parent"
                            android:text="无信息"
                            />
                    </LinearLayout>

                </LinearLayout>

                <ImageView
                    android:id="@+id/ImageView_major"
                    android:layout_below="@+id/LL_school"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E8E8E8"
                    />
                <LinearLayout
                    android:id="@+id/LL_major"
                    android:layout_below="@+id/ImageView_major"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textSize="20dp"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="#367EAA"
                        android:textStyle="bold"
                        android:text="专业班级"/>
                    <LinearLayout
                        android:gravity="right"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                           android:id="@+id/text_class_name"
                            android:layout_width="wrap_content"
                            android:textSize="20dp"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="#367EAA"
                            android:layout_height="match_parent"
                            />
                    </LinearLayout>
                </LinearLayout>
                <ImageView
                    android:id="@+id/ImageView_total"
                    android:layout_below="@+id/LL_major"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E8E8E8"
                    />
                <LinearLayout
                    android:id="@+id/LL_total"
                    android:layout_below="@+id/ImageView_total"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="#367EAA"
                        android:text="总经验值"/>
                    <LinearLayout
                        android:gravity="right"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:id="@+id/experience"
                            android:layout_width="wrap_content"
                            android:textSize="20dp"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:layout_height="match_parent"
                            android:text="52     "
                            android:textColor="#367EAA"
                            />
                    </LinearLayout>
                </LinearLayout>

                <ImageView
                    android:layout_below="@+id/LL_total"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E8E8E8"
                    />
            </RelativeLayout>
        </ScrollView>

    </RelativeLayout>